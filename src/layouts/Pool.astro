---
import BaseHead from "../components/BaseHead.astro";
import BaseHeader from "../components/BaseHeader.astro";
import Footer from "../components/Footer.astro";

---
<html lang="en">

	<BaseHead>
  </BaseHead>

	<body class="flex flex-col items-center">

    <div class="bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-indigo-950 to bg-slate-950 w-full h-screen fixed inset-0 -z-50">

    <div class="blob left-1/2 top-1/2 absolute -z-30">
        <div class="h-[600px] w-96 rounded-full bg-gradient-to-t from-pink-200 to-yellow-200 animate-poolRev">
        </div>
    </div>

    <div class="blob left-1/2 top-1/2 absolute -z-20">
        <div class="h-[600px] w-96 rounded-full bg-gradient-to-t from-pink-300 to pink-200 to-indigo-400 animate-pool">
        </div>
    </div>

    </div>



    <div class="blur-layer w-full h-full backdrop-blur-[150px] fixed inset-0 -z-20">
    </div>



    <BaseHeader>
    </BaseHeader>

    <div class="flex justify-center bg-frost backdrop-blur-lg w-10/12 min-h-screen mt-32 rounded-2xl">
      <slot>
    
    
      </slot>
    </div>

    <Footer>
    </Footer>

    <script src="../lib/pool.js"></script>
    <script src="../lib/menu.js"></script>
	</body>
</html>